property newClientAcceptRef ${nuklei:newReferenceId()} # external scope

connect await ROUTED_CLIENT
        "nukleus://http/streams/source"
    option nukleus:route ${newClientAcceptRef}

write nukleus:begin.ext ${http:headers()
                              .item(":scheme", "http")
                              .item(":method", "GET")
                              .item(":path", "/")
                              .item(":authority", "localhost:8080")
                              .item("Custom-Header-1", "custom header 1 value")
                              .item("Custom-Header-2", "custom header 2 value")
                              .build()}
connected

write aborted

