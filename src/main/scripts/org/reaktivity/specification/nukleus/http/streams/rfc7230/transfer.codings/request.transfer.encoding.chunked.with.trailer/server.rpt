property newClientAcceptRef ${nuklei:newReferenceId()} # external scope
property newServerConnectRef ${newClientAcceptRef} # external scope

property serverConnect "nukleus://target/streams/http#source"

accept ${serverConnect}
  option http:transport ${serverConnect}
  option nukleus:route  ${newServerConnectRef}
  option nukleus:window 8192
  option nukleus:transmission "duplex"
accepted

read nukleus:begin.ext [0x00] [0x07] ":scheme" [0x04] "http"
read nukleus:begin.ext [0x00] [0x07] ":method" [0x04] "POST"
read nukleus:begin.ext [0x00] [0x05] ":path" [0x01] "/"
read nukleus:begin.ext [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
read nukleus:begin.ext [0x00] [0x0c] "content-type" [0x0a] "text/plain"
read nukleus:begin.ext [0x00] [0x11] "transfer-encoding" [0x07] "chunked"
read nukleus:begin.ext [0x00] [0x07] "trailer" [0x0a] "Connection"

write nukleus:begin.ext [0x00] [0x07] ":status" [0x03] "200"

connected

read "Chunk A"
read "Chunk B"
read "Chunk C"

read nukleus:end.ext [0x00] [0x0a] "connection" [0x05] "close"
read closed

write close

